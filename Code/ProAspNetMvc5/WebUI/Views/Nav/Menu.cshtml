@model IEnumerable<string>

@Html.ActionLink("Home", "List", "Product", null,
    new { @class = "list-group-item" + (ViewBag.SelectedCategory != null ? "" : " active") })

@foreach (var link in Model)
{
    @Html.RouteLink(link, new
    {
        controller = "Product",
        action = "List",
        category = link,
        page = 1
    },
        new
        {
            @class = "list-group-item"
                + (link == ViewBag.SelectedCategory ? " active" : "")
        })
}
